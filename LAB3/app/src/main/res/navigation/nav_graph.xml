<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startPage">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.kalkulatorbmi.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/startPage"
        android:name="com.example.kalkulatorbmi.StartPage"
        android:label="activity_start_page"
        tools:layout="@layout/activity_start_page" >
        <action
            android:id="@+id/action_startPage_to_mainActivity"
            app:destination="@id/mainActivity" />
    </activity>
    <activity
        android:id="@+id/checkCalories"
        android:name="com.example.kalkulatorbmi.CheckCalories"
        android:label="activity_check_calories"
        tools:layout="@layout/activity_check_calories" />
</navigation>